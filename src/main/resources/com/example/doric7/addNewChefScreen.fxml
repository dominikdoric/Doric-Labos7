<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.doric7.controllers.addNewItemControllers.AddNewChefController"
            prefHeight="400.0" prefWidth="600.0">

    <top>
        <MenuBar>
            <Menu text="Category">
                <MenuItem text="Search" onAction="#onCategoryMenuClick"/>
                <MenuItem text="Add new category" onAction="#onAddNewCategoryClick"/>
            </Menu>
            <Menu text="Ingredients">
                <MenuItem text="Search" onAction="#onIngredientsMenuClick"/>
                <MenuItem text="Add new ingredient" onAction="#onAddNewIngredientClick"/>
            </Menu>
            <Menu text="Meals">
                <MenuItem text="Search" onAction="#onMealsMenuClick"/>
                <MenuItem text="Add new meal" onAction="#onMealsMenuClick"/>
            </Menu>
            <Menu text="Chefs">
                <MenuItem text="Search" onAction="#onChefMenuClick"/>
                <MenuItem text="Add new chef" onAction="#onChefMenuClick"/>
            </Menu>
            <Menu text="Waiters">
                <MenuItem text="Search" onAction="#onWaitersMenuClick"/>
                <MenuItem text="Add new waiter" onAction="#onWaitersMenuClick"/>
            </Menu>
            <Menu text="Deliverers">
                <MenuItem text="Search" onAction="#onDeliverersMenuClick"/>
                <MenuItem text="Add new deliverer" onAction="#onDeliverersMenuClick"/>
            </Menu>
            <Menu text="Restaurants">
                <MenuItem text="Search" onAction="#onRestaurantsMenuClick"/>
                <MenuItem text="Add new restaurant" onAction="#onRestaurantsMenuClick"/>
            </Menu>
            <Menu text="Orders">
                <MenuItem text="Search" onAction="#onOrdersMenuClick"/>
                <MenuItem text="Add new order" onAction="#onOrdersMenuClick"/>
            </Menu>
            <Menu text="Contracts">
                <MenuItem text="Search" onAction="#onContractsMenuClick"/>
                <MenuItem text="Add new contract" onAction="#onContractsMenuClick"/>
            </Menu>
        </MenuBar>
    </top>

    <left>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20.0" left="10.0" right="20.0" bottom="20.0"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="First name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="firstName" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="400"/>

            <Label text="Last name:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="lastName" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="400"/>

            <Button text="Save" fx:id="saveChefButton" onAction="#onSaveChefClick" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </left>

</BorderPane>
